print('''
Approach 1 : Inputs Values in Function call : Yes
             Returns Values in              : Yes
**************************************************************************     
Input   : Function call 
Process : Function def = fun heading + fun body
Output  : Function call
''')

def sumofnumbers(num1,num2):            # function heading ==> functionname(list of parameters)
    result = num1 + num2                # function body
    return result
num1 = float(input('Enter Number 1: ')) # taking inputs
num2 = float(input('Enter Number 2: '))
result = sumofnumbers(num1,num2)        # function call
print(result)                           # prints output
